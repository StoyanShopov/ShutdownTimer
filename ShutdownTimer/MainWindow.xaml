<Window x:Class="ShutdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShutdownTimer"
        mc:Ignorable="d"
        Title="Shutdown Timer" Height="210" Width="215">
    <Grid Margin="0,10,3.6,8.4">

        <ComboBox
            x:Name="combobox"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            Width="182"
            Loaded="ComboBox_Loaded" Height="31"
            BorderBrush="AliceBlue"
           />
        <Button Content="Shutdown" HorizontalAlignment="Left" Margin="10,46,0,0" BorderBrush="AliceBlue" VerticalAlignment="Top" Width="182" Height="32" Click="Button_Shutdown"/>
        <Button Content="Abort" HorizontalAlignment="Left" Margin="10,83,0,0"  BorderBrush="AliceBlue" VerticalAlignment="Top" Width="182" Height="32"  Click="Button_Abort"/>
        <Button Content="Options" HorizontalAlignment="Left" Margin="10,120,0,0"  BorderBrush="AliceBlue" VerticalAlignment="Top" Width="182" Height="32" Click="Button_AdditionOptions"/>
    </Grid>

</Window>
